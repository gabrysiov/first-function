from time import sleep

mins = 10
while mins >= 0:
    if mins != 5 and mins != 2 and mins != 0:
        print(str(mins))
    elif mins == 5:
        print('Place your reservation soon! 5 minutes remaining!')
    elif mins == 2:
        print('Dont lose your seats! 2 minutes remaining.')
    elif mins == 0:
        print('User timed out')
    sleep(1)    
    mins = mins - 1   
